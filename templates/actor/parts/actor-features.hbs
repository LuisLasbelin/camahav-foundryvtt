<div style="margin-top: 10px;">
  <h2 class="title classes">{{localize "CAMAHAV.Classes"}}</h2>
  {{!-- CLASSES --}}
  <ol class='items-list'>
    <li class='item flexrow items-header'>
      <div class='item-name'>{{localize 'CAMAHAV.Classes'}}</div>
      <div class='item-controls'>
        <a class='item-control item-create' title='Create item' data-type='class'>
          <i class='fas fa-plus'></i>
        </a>
      </div>
    </li>
    {{#each classes as |item id|}}
    <li class='item flexrow' data-item-id='{{item._id}}'>
      <div class='item-name'>
        <div class='item-image'>
          <a class='rollable' data-roll-type='item'>
            <img src='{{item.img}}' title='{{item.name}}' width='32' height='32' />
          </a>
        </div>
        <h4>{{item.name}}</h4>
      </div>
      <div class='item-controls'>
        <a class='item-control item-edit' title='{{localize "DOCUMENT.Edit" type=' class'}}'>
          <i class='fas fa-edit'></i>
        </a>
        <a class='item-control item-delete' title='{{localize "DOCUMENT.Delete" type=' class'}}'>
          <i class='fas fa-trash'></i>
        </a>
      </div>
    </li>
    {{/each}}
  </ol>
  {{!-- SKILLS --}}
  <ol class='items-list'>
    <li class='item flexrow items-header'>
      <div class='item-name'>{{localize 'CAMAHAV.Skills'}}</div>
      <div class='item-prop'>{{localize 'CAMAHAV.Level'}}: {{skillsTotal}}</div>
      <div class='item-controls'>
        <a class='item-control item-create' title='Create item' data-type='skill'>
          <i class='fas fa-plus'></i>
        </a>
      </div>
    </li>
    {{#each skills as |item id|}}
    <li class='item flexrow' data-item-id='{{item._id}}'>
      <div class='item-name'>
        <div class='item-image'>
          <a class='rollable' data-roll-type='skill'>
            <img src='{{item.img}}' title='{{item.name}}' width='32' height='32' />
          </a>
        </div>
        <h4>{{item.name}}</h4>
      </div>
      <div class='item-value item-prop'>{{item.system.value}}</div>
      <div class='item-controls'>
        <a class='item-control item-edit' title='{{localize "DOCUMENT.Edit" type=' skill'}}'>
          <i class='fas fa-edit'></i>
        </a>
        <a class='item-control item-delete' title='{{localize "DOCUMENT.Delete" type=' skill'}}'>
          <i class='fas fa-trash'></i>
        </a>
      </div>
    </li>
    {{/each}}
  </ol>
</div>