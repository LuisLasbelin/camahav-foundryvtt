<div class="grid-2col">
  <div>
    <div>{{localize "CAMAHAV.MaxCarry" }}: {{maxCarry}}</div>
    <div>{{localize "CAMAHAV.TotalCarry" }}: {{totalCarry}}</div>
  </div>
  <div>
    <div class="flexrow"><span class="flexshrink">{{localize "CAMAHAV.Silver"}}: </span><input name="system.coins.silver" value="{{system.coins.silver}}" type="text"
        data-dtype="Number" /></div>
    <div class="flexrow"><span class="flexshrink">{{localize "CAMAHAV.Copper"}}: </span><input name="system.coins.copper" value="{{system.coins.copper}}" type="text"
        data-dtype="Number" /></div>
  </div>
</div>
<div class="grid-2col">
  {{!--ITEMS--}}
  <ol class='items-list'>
    <li class='item flexrow items-header'>
      <div class='item-name'>{{localize 'Items'}}</div>
      <div class='item-controls'>
        <a class='item-control item-create' title='{{localize "DOCUMENT.Create" type=' Item'}}' data-type='item'>
          <i class='fas fa-plus'></i>
          {{localize 'DOCUMENT.New' type='item'}}
        </a>
      </div>
    </li>
    {{#each gear as |item id|}}
    <li class='item flexrow' data-item-id='{{item._id}}'>
      <div class='item-name'>
        <div class='item-image'>
          <a class='rollable' data-roll-type='item'>
            <img src='{{item.img}}' title='{{item.name}}' width='32' height='32' />
          </a>
        </div>
        <h4>{{item.name}}</h4>
      </div>
      <div class='item-controls'>
        {{#if item.system.uses.max}}
        <input class="item-uses" value="{{item.system.uses.value}}" type="text" data-dtype="Number" />
        /
        <span>{{item.system.uses.max}}</span>
        {{/if}}
        {{#if item.system.equipped includeZero=true}}
        <a class='item-control item-equip' title='{{localize "DOCUMENT.Wear" type=' Armor'}}'>
          <i class='far fa-shirt'></i>
        </a>
        {{/if}}
        <a class='item-control item-edit' title='{{localize "DOCUMENT.Update" type=' Item'}}'>
          <i class='fas fa-edit'></i>
        </a>
        <a class='item-control item-delete' title='{{localize "DOCUMENT.Delete" type=' Item'}}'>
          <i class='fas fa-trash'></i>
        </a>
      </div>
    </li>
    {{/each}}
  </ol>
  {{!--ARMOR AND WEAPONS--}}
  <ol class='items-list'>
    <li class='item flexrow items-header'>
      <div class='item-name'>{{localize 'Equipment'}}</div>
      <div class='item-controls'>
        <a class='item-control item-create' title='{{localize "DOCUMENT.Create" type=' Armor'}}' data-type='armor'>
          <i class='fas fa-plus'></i>
          {{localize 'DOCUMENT.New' type='armor'}}
        </a>
      </div>
    </li>
    {{#each armor as |item id|}}
    <li class='item flexrow' data-item-id='{{item._id}}'>
      <div class='item-name'>
        <div class='item-image'>
          <a class='rollable' data-roll-type='item'>
            <img src='{{item.img}}' title='{{item.name}}' width='32' height='32' />
          </a>
        </div>
        <h4>{{item.name}}</h4>
      </div>
      <div class='item-controls'>
        <a class='item-control item-equip' title='{{localize "DOCUMENT.Wear" type=' Armor'}}'>
          <i class='fas fa-shirt'></i>
        </a>
        <a class='item-control item-edit' title='{{localize "DOCUMENT.Update" type=' Armor'}}'>
          <i class='fas fa-edit'></i>
        </a>
        <a class='item-control item-delete' title='{{localize "DOCUMENT.Delete" type=' Armor'}}'>
          <i class='fas fa-trash'></i>
        </a>
      </div>
    </li>
    {{/each}}
    <li class='item flexrow items-header'>
      <div class='item-name'>{{localize 'Weapons'}}</div>
      <div class='item-controls'>
        <a class='item-control item-create' title='{{localize "DOCUMENT.Create" type=' Weapon'}}' data-type='weapon'>
          <i class='fas fa-plus'></i>
          {{localize 'DOCUMENT.New' type='weapon'}}
        </a>
      </div>
    </li>
    {{#each weapons as |item id|}}
    <li class='item flexrow' data-item-id='{{item._id}}'>
      <div class='item-name'>
        <div class='item-image'>
          <a class='rollable' data-roll-type='item'>
            <img src='{{item.img}}' title='{{item.name}}' width='32' height='32' />
          </a>
        </div>
        <h4>{{item.name}}</h4>
      </div>
      <div class='item-controls'>
        <a class='item-control item-equip' title='{{localize "DOCUMENT.Wear" type=' Weapon'}}'>
          <i class='fas fa-hand'></i>
          {{#ifEquals item.system.requiredHands "2"}}<i class='fas fa-hand'></i>{{/ifEquals}}
        </a>
        <a class='item-control item-attack' title='{{localize "DOCUMENT.Attack" type=' Weapon'}}'>
          <i class='fas fa-swords'></i>
        </a>
        <a class='item-control item-edit' title='{{localize "DOCUMENT.Update" type=' Weapon'}}'>
          <i class='fas fa-edit'></i>
        </a>
        <a class='item-control item-delete' title='{{localize "DOCUMENT.Delete" type=' Weapon'}}'>
          <i class='fas fa-trash'></i>
        </a>
      </div>
    </li>
    {{/each}}
  </ol>
</div>